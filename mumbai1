package com.codewithankur;

import java.util.Scanner;

public class Main {

    public static void main(String[] args) {
        // For Reading Inputs like Name i.e a String : Create a Scanner Object.
        Scanner anObject = new Scanner(System.in); //i.e for entry in terminal;
        //println adds a line, so remove 'ln'
        System.out.print("Name:  ");
        String Name = anObject.nextLine().trim(); //To show full line, rather add anObject.nextLine(); And btw add .trim to the variable "Name"
        System.out.println("Your Name is "+ Name);
    }
}


