package com.codewithankur;

import java.text.NumberFormat;
import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        //Defining Variables
        System.out.print("Principle: ");
        Scanner anObject = new Scanner(System.in);
        double P = anObject.nextDouble();
        System.out.print("Annual Rate of Interest: ");
        Scanner anObject1 = new Scanner(System.in);
        double i = anObject1.nextDouble()/100;
        System.out.print("Tenure in Years: ");
        Scanner anObject2 = new Scanner(System.in);
        double n = anObject2.nextDouble();
        System.out.print("Compounding Frequency(1/4/12/365): ");
        Scanner anObject3 = new Scanner(System.in);
        double c = anObject3.nextDouble();
        System.out.print("Regular Monthly Payment in Amount: ");
        Scanner anObject4 = new Scanner(System.in);
        double R = anObject.nextDouble();
        double ic = i/c;
        double nc = n*c;
        //A = P(1 + r/c)^nc
        //(R*(Math.pow(1+r/c,n*c))-1)/r/c;
        double result = P*Math.pow(1+ic,nc)+(R*((Math.pow(1+ic,nc))-1)/ic);
        String FV = NumberFormat.getCurrencyInstance().format(result);
        System.out.println("Future Value: "+FV);

    }
}

